#!/usr/bin/env bash
#1
for pid in /proc/[0-9]*; do
    # Extract the PID number
    pid_num=$(basename "$pid")
    
    # Read the process name from /proc/<PID>/comm
    if [[ -f "$pid/comm" ]]; then
        name=$(<"$pid/comm")
        # Check if process name contains 'bash'
        if [[ "$name" == *bash* ]]; then
            echo "$pid_num $name"
        fi
    fi
done
